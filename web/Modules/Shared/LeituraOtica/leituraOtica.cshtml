<div class="container-texto-leitura-otica">
    <input id="{{ctrl.idElemento}}" 
           class="input-grande-azul" 
           type="text" 
           ng-model="modelElemento" 
           placeholder="{{ !ctrl.loading && ctrl.placeholder || ''}}" 
           ng-class="(ctrl.loading && 'vazio') || (!modelElemento  && 'vazio') || (vendedorInvalido && 'erro') || 'default'"
           ng-focus="ctrl.definirCampoAtivo(ctrl.idElemento)" 
           ng-click="$event.stopPropagation();" 
           ng-change="vendedorInvalido = false"
           autocomplete="off">

    <div class="pilula-loading pilula-mini" ng-show="ctrl.loading" style="position: absolute; bottom: 38px; left: 50%; margin-left: -32px;">
        <div></div>
        <div></div>
    </div>
</div>